<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x37"
            android:background="@color/bgfff"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/back" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/Product_evaluation"
                android:textColor="@color/text333"
                android:textSize="@dimen/x13" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y25"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:background="@mipmap/pingjia01"
                android:text="@string/all"
                android:textColor="@color/bgfff" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:background="@mipmap/pingjia02"
                android:text="@string/High_praise" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:background="@mipmap/pingjia02"
                android:text="@string/evaluation" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:weightSum="3">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="@dimen/y25"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_weight="1"
                android:background="@mipmap/pingjia02"
                android:text="@string/Bad_review" />

        </LinearLayout>


        <include layout="@layout/layout_empty"></include>


        <com.lingqiapp.View.WenguoyiRecycleView
            android:id="@+id/ce_shi_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"></com.lingqiapp.View.WenguoyiRecycleView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"
        android:background="@drawable/bg_zhiding"
        android:padding="@dimen/x3">

        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:background="@mipmap/dingbu" />

    </FrameLayout>
</FrameLayout>
