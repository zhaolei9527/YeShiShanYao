<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_orderIlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgfff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lingqiapp.View.MYSimpleDraweeView
            android:id="@+id/SimpleDraweeView"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/x84"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x5" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y90"
            android:layout_marginTop="@dimen/y12"
            android:layout_marginRight="@dimen/x10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/y90"
            android:layout_marginRight="@dimen/x10"
            android:textColor="#F0667F"
            android:textSize="@dimen/x17" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_marginLeft="@dimen/y90"
            android:layout_marginBottom="@dimen/x10" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/SimpleDraweeView"
            android:layout_marginTop="@dimen/x8"
            android:background="#cccccc"></View>

    </RelativeLayout>

</FrameLayout>