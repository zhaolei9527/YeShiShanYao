<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <com.lingqiapp.View.CustomViewPager
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></com.lingqiapp.View.CustomViewPager>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <sakura.bottomtabbar.BottomTabBar
                android:id="@+id/BottomTabBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></sakura.bottomtabbar.BottomTabBar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y35"
                android:clipChildren="false"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_Cartnum"
                        android:layout_width="@dimen/x18"
                        android:layout_height="@dimen/x18"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-10dp"
                        android:background="@drawable/shop_price_shape"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/x10"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x18"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
