<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.lingqiapp.View.WenguoyiRecycleView
            android:id="@+id/rv_shop_type_list"
            android:layout_width="@dimen/x90"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"></com.lingqiapp.View.WenguoyiRecycleView>

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="match_parent"
            android:background="@color/bgea"></View>

        <com.lingqiapp.View.WenguoyiRecycleView
            android:id="@+id/rv_shop_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"></com.lingqiapp.View.WenguoyiRecycleView>

    </LinearLayout>

</LinearLayout>
