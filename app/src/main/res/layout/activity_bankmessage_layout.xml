<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"
        android:background="@color/bgfff"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/back" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Bank_card_management"
            android:textColor="@color/text333"
            android:textSize="@dimen/x13" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/bgea"></View>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:background="@mipmap/bankmessage_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:text="@string/not_bound_your_bank_card"
            android:textColor="@color/text666"
            android:textSize="@dimen/x13" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x100"
        android:layout_marginTop="@dimen/x20"
        android:background="@mipmap/yinhangka"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/bgfff"
            android:textSize="@dimen/x15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/bgfff"
            android:textSize="@dimen/x15"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/bg_dash_line"
            android:layerType="software"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x8"
            android:layout_marginTop="@dimen/x8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x15" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"
                android:background="@mipmap/deleteyhk" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_addbank"
        android:layout_width="@dimen/x262"
        android:layout_height="@dimen/y33"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x15"
        android:background="@mipmap/btn_login"
        android:text="@string/Bank_card_binding"
        android:textAllCaps="false"
        android:textColor="@color/bgfff"
        android:textSize="@dimen/x15"
        android:visibility="visible" />

</LinearLayout>
