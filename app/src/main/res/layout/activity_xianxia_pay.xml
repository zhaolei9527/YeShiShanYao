<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x38"
            android:background="@color/bgfff"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/back" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="线下付款"
                android:textColor="@color/text333"
                android:textSize="@dimen/x16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/bgea"></View>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank payee："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_name1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Collection account："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_num1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginBottom="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Bank："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_bank1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/bgea"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Bank payee："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_name2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Collection account："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_num2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginBottom="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Bank："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_bank2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/bgea"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Bank payee："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_name3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Collection account："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_num3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginBottom="@dimen/x5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="Bank："
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                        <TextView
                            android:id="@+id/tv_bank_bank3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text333"
                            android:textSize="@dimen/x12" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/bgea"></View>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x3"
                    android:background="@color/bgea"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x13"
                    android:text="Description："
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginBottom="@dimen/x13"
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x3"
                    android:background="@color/bgea"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x13"
                    android:text="Payment Method："
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x15" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x13"
                        android:layout_marginTop="@dimen/x13"
                        android:background="@mipmap/xianxia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_marginTop="@dimen/x13"
                        android:layout_marginBottom="@dimen/x13"
                        android:text="Online payments"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x3"
                    android:background="@color/bgea"></View>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_login"
            android:text="Upload payment voucher"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>
