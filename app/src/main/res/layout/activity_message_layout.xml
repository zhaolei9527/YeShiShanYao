<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgea"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/bgfff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x37"
                android:background="@color/bgfff"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@mipmap/back" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/information_setting"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_change_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="@string/Head_portrait"
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/SimpleDraweeView"
                        android:layout_width="@dimen/x33"
                        android:layout_height="@dimen/x33"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        fresco:roundAsCircle="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:id="@+id/r_change_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="@string/nickname"
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/tv_nicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="@string/email"
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x5"
                    android:background="@color/bgea"></View>

                <RelativeLayout
                    android:id="@+id/rl_change_psw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y39">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="@string/Change_password"
                        android:textColor="#333"
                        android:textSize="@dimen/x12" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x10"
                        android:src="@mipmap/togo" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y280"
        android:background="@mipmap/btn_login"
        android:text="@string/save"
        android:textColor="@color/bgfff"
        android:textSize="@dimen/x15" />

</RelativeLayout>
