<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x80">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y43"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        card_view:cardBackgroundColor="#F7EDE6"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_gravity="center"
            android:background="@drawable/me_content_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x3"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_wdeshoucang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shoucangtb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="@string/My_collection"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/x1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/bgea"></View>

            <LinearLayout
                android:id="@+id/ll_shouhuodizhi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dizhitb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="@string/Shipping_address"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/x1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/bgea"></View>

            <LinearLayout
                android:id="@+id/ll_erweima"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/eweimatb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="@string/qr_code"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/x1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/bgea"></View>

            <LinearLayout
                android:id="@+id/ll_yaoqingliebiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yaoqingtb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x3"
                    android:text="@string/invitation_list"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/bgea"></View>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
